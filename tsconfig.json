{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "allowJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "src/",
        "outDir": "./dist",
        "paths": {
            "@/*": ["*"]
        }
    }
}
